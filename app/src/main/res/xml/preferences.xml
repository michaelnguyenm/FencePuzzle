<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Sound Settings">
        <CheckBoxPreference
            android:key="sound"
            android:title="Sound"
            android:defaultValue="true"
            android:summary="Turn the sound on or off" />
        <CheckBoxPreference
            android:key="music"
            android:title="Music"
            android:defaultValue="true"
            android:summary="Turn the music on or off" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Appearance">
        <ListPreference
            android:key="background_options"
            android:title="Background"
            android:summary=""
            android:defaultValue="@string/white"
            android:entries="@array/background_options"
            android:entryValues="@array/background_options"/>
    </PreferenceCategory>
</PreferenceScreen>