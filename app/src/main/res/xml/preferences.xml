<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Sound Settings">
        <CheckBoxPreference
            android:key="sound"
            android:title="Sound"
            android:defaultValue="true"
            android:summary="Turn the sound on or off" />
        <CheckBoxPreference
            android:key="music"
            android:title="Music"
            android:defaultValue="true"
            android:summary="Turn the music on or off" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Game Settings">
        <ListPreference
            android:key="theme_option"
            android:title="Theme"
            android:summary=""
            android:defaultValue="@string/white"
            android:entries="@array/theme_options"
            android:entryValues="@array/theme_options"/>
        <CheckBoxPreference
            android:key="vibration"
            android:title="Vibration"
            android:defaultValue="true"
            android:summary="Turn the vibration on or off for puzzle taps" />
        <Preference
            android:key="reset_game"
            android:title="Reset all records" />
    </PreferenceCategory>
</PreferenceScreen>