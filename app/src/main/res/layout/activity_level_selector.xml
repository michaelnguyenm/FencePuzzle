<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mlt.fencepuzzle.LevelSelectorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/level_selector_title"
        android:textSize="30sp"
        android:paddingTop="30dp"
        android:paddingBottom="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:text="@string/easy"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/easy_1"
            android:layout_marginRight="5dp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="selectLevelOne">
        </Button>
        <Button
            android:id="@+id/easy_2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/easy_1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/easy_3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/easy_2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/easy_4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/easy_3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="selectLevel">
        </Button>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:text="@string/medium"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/medium_1"
            android:layout_marginRight="5dp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/medium_2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/medium_1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/medium_3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/medium_2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/medium_4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/medium_3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="selectLevel">
        </Button>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:text="@string/hard"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/hard_1"
            android:layout_marginRight="5dp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="selectLevelOne">
        </Button>
        <Button
            android:id="@+id/hard_2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/hard_1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/hard_3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/hard_2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="11"
            android:onClick="selectLevel">
        </Button>
        <Button
            android:id="@+id/hard_4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/hard_3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:onClick="selectLevel">
        </Button>
    </RelativeLayout>

</LinearLayout>
